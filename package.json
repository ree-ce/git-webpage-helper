{
  "name": "git-webpage-helper",
  "displayName": "Git Webpage Helper",
  "description": "Enhanced Git integration for VS Code",
  "version": "0.1.0",
  "publisher": "ReeceToolkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-actual-username/git-helper.git"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "license": "MIT",
  "keywords": [
    "git",
    "github",
    "gitlab",
    "bitbucket"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git",
    "onCommand:git-helper.openFileOnWeb",
    "onCommand:git-helper.openBranchOnWeb"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-helper.openFileOnWeb",
        "title": "Git Helper: Open on Web"
      },
      {
        "command": "git-helper.openBranchOnWeb",
        "title": "Git Helper: Open Branch on Web"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "git-helper.submenu",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "submenu": "git-helper.submenu",
          "group": "navigation"
        }
      ],
      "editor/lineNumber/context": [
        {
          "command": "git-helper.openFileOnWeb",
          "group": "navigation"
        },
        {
          "command": "git-helper.openBranchOnWeb",
          "group": "navigation"
        }
      ],
      "git-helper.submenu": [
        {
          "command": "git-helper.openFileOnWeb",
          "group": "1_open"
        },
        {
          "command": "git-helper.openBranchOnWeb",
          "group": "1_open"
        }
      ]
    },
    "submenus": [
      {
        "id": "git-helper.submenu",
        "label": "Git Helper"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package-prod",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile && node ./esbuild.js",
    "package-prod": "NODE_ENV=production npm run package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.0",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "esbuild": "^0.19.11"
  }
}
